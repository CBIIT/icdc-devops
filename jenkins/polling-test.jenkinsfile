pipeline {
    agent {
        node {
            label "cicd_microservice"
        }
    }

    stages{

        stage('Echo Branch'){
            
            steps {

                echo "Branch:   ${GIT_BRANCH}"

            }

        }

        stage('Check Regex'){

            when { 

                branch pattern: "releases/[0-9]+(.[0-9]+)*[0-9]*?\$", comparator: "REGEXP"

            }

            steps {

                echo "Branch:   ${branch}"

            }

        }

    }

