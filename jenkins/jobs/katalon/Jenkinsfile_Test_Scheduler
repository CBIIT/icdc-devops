    stages{

		stage('checkout'){
            steps {

                checkout([$class: 'GitSCM', 
                    branches: [[name: 'test_schedule']], 
                    doGenerateSubmoduleConfigurations: false,
					extensions: [],
					submoduleCfg: [], 
                    userRemoteConfigs: [[url: 'https://github.com/CBIIT/icdc-devops.git']]])

                }
            }


		stage('run tests'){
            
            steps {

				script {

					csv_content = readCSV file: 'jenkins/jobs/katalon/Test-Schedule.csv', format: CSVFormat.DEFAULT.withHeader()

					//println java.time.LocalDateTime.now()
					def now = new Date()
					def this_hour now.format("HH", TimeZone.getTimeZone('America/New_York'))
					println this_hour

					println csv_content

					for (def record : csv_content) {

						if (this_hour == record.get('Time')) {
						
						    println record.get('Branch')
						    println record.get('Katalon_Project')
						    println record.get('Katalon_Suite')
						    println record.get('Profile')
						    println record.get('Email_Recipients')

						}

					}

			   }

            }

        }

    }

	post {

		cleanup {

	        cleanWs()

	    }

	}

}